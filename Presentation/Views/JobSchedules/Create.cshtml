@model Core.Entities.JobSchedule

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>JobSchedule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="JobName" class="control-label"></label>
                <input asp-for="JobName" class="form-control" />
                <span asp-validation-for="JobName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobGroup" class="control-label"></label>
                <input asp-for="JobGroup" class="form-control" />
                <span asp-validation-for="JobGroup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfThreads" class="control-label"></label>
                <input asp-for="NumberOfThreads" class="form-control" />
                <span asp-validation-for="NumberOfThreads" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TriggerName" class="control-label col-md-2"></label>
